<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <dic class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Comment</h1>
        <%= form_for @comment do |f| %>
        
          <div class="form-group">
           <%= f.label :content %>
           <%= f.text_field :content, class: 'form-control' %>
          </div>
        
          <% if logged_in?%>
          <%= f.submit "コメントする", class: "btn btn-black btn-block" %>
          <% end %>
                
        <% end %>  
      </dic>
    </div>
  </div>
</div>
          
          
          